{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "typeRoots" : ["node_modules/@types", "src/types"],
    "baseUrl": "./src",
   "paths": {
     "@assets/*":[
        "assets/*"
     ]
   }  
  },
  "include": ["src/types/**/*"],
  "files": ["src/index.ts"]
}
